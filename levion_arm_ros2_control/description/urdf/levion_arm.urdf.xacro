<?xml version="1.0"?>
<robot name="ak80_8" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Include ros2 control tags -->
  <xacro:include filename="$(find levion_arm_ros2_control)/ros2_control/levion_arm.ros2_control.xacro"/>
  <!-- include materials -->
  <xacro:include filename="$(find levion_arm_ros2_control)/config/material.macros.xacro"/>

  <!-- Main URDF -->
  <link name="world"/>

  <link name="link0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link0.STL" scale="1 1 1" color="0. 0. 0."/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link0.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link1.STL" scale="1 1 1"/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link1.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link2.STL" scale="1 1 1"/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link2.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="world_to_link0" type="fixed">
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="link0"/>
  </joint>

  <joint name="joint1" type="revolute">
    <origin xyz="0 0 0.0439" rpy="0 0 0"/>
    <parent link="link0"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159265359" upper="3.14159265359" effort="10" velocity="10"/>
  </joint>

  <joint name="joint2" type="revolute">
    <origin xyz="0.32 0 0.04685" rpy="0 0 0"/>
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159265359" upper="3.14159265359" effort="10" velocity="10"/>
  </joint>
</robot>
