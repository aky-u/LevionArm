<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="levion_arm" 
      params="parent prefix *origin left_right:=left">

  <xacro:include filename="$(find levion_arm_ros2_control)/config/levion.property.xacro"/>

  <xacro:if value="${left_right == 'left'}">
    <xacro:property name="shoulder_lower" default="${left_shoulder_lower}" />
    <xacro:property name="shoulder_upper" default="${left_shoulder_upper}" />
    <xacro:property name="shoulder_vel" default="${left_shoulder_velocity_limit}" />
    <xacro:property name="shoulder_effort" default="${left_shoulder_effort_limit}" />
    <xacro:property name="elbow_lower" default="${left_elbow_lower}" />
    <xacro:property name="elbow_upper" default="${left_elbow_upper}" />
    <xacro:property name="elbow_vel" default="${left_elbow_velocity_limit}" />
    <xacro:property name="elbow_effort" default="${left_elbow_effort_limit}" />
  </xacro:if>
  <xacro:if value="${left_right == 'right'}">
    <xacro:property name="shoulder_lower" default="${right_shoulder_lower}" />
    <xacro:property name="shoulder_upper" default="${right_shoulder_upper}" />
    <xacro:property name="shoulder_vel" default="${right_shoulder_velocity_limit}" />
    <xacro:property name="shoulder_effort" default="${right_shoulder_effort_limit}" />
    <xacro:property name="elbow_lower" default="${right_elbow_lower}" />
    <xacro:property name="elbow_upper" default="${right_elbow_upper}" />
    <xacro:property name="elbow_vel" default="${right_elbow_velocity_limit}" />
    <xacro:property name="elbow_effort" default="${right_elbow_effort_limit}" />
  </xacro:if>

  <joint name="${prefix}${left_right}_base_joint" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${parent}"/>
    <child link="${prefix}${left_right}_link0" />
  </joint>

  <link name="${prefix}${left_right}_link0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link0.STL" scale="1 1 1" color="0. 0. 0."/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link0.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="${prefix}${left_right}_link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link1.STL" scale="1 1 1"/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link1.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="${prefix}${left_right}_link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link2.STL" scale="1 1 1"/>
      </geometry>
      <xacro:levion_black/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find levion_arm_ros2_control)/mesh/Link2.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <link name="${prefix}${left_right}_tool_link">
  </link>

  <joint name="${prefix}${left_right}_shoulder_joint" type="revolute">
    <origin xyz="0 0 0.0439" rpy="0 0 0"/>
    <parent link="${prefix}${left_right}_link0"/>
    <child link="${prefix}${left_right}_link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="${shoulder_lower}"
      upper="${shoulder_upper}" 
      effort="${shoulder_effort}" 
      velocity="${shoulder_vel}"/>
  </joint>

  <joint name="${prefix}${left_right}_elbow_joint" type="revolute">
    <origin xyz="0.32 0 0.04685" rpy="0 0 0"/>
    <parent link="${prefix}${left_right}_link1"/>
    <child link="${prefix}${left_right}_link2"/>
    <axis xyz="0 0 1"/>
    <limit lower="${elbow_lower}" 
      upper="${elbow_upper}" 
      effort="${elbow_effort}"
      velocity="${elbow_vel}"/>
  </joint>

  <joint name="${prefix}${left_right}_tool_joint" type="fixed">
    <origin xyz=".255 0 0" rpy="${PI/2} 0 ${PI/2}"/>
    <parent link="${prefix}${left_right}_link2"/>
    <child link="${prefix}${left_right}_tool_link"/>
  </joint>
  </xacro:macro>
</robot>
